<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="390.0" prefWidth="420.0" styleClass="fondo-registro"
            stylesheets="@/Estilos/estilos.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controladores.AgregarReporteController">

    <children>
        <ImageView fx:id="imagenTrekNic"
                   fitHeight="60.0" fitWidth="100.0"
                   layoutX="160.0" layoutY="5.0"
                   preserveRatio="true" pickOnBounds="true" />

        <VBox layoutX="30.0" layoutY="60.0" spacing="12.0"
              styleClass="panel-registro" alignment="TOP_LEFT"
              prefWidth="360.0" prefHeight="300.0">
            <children>
                <Label text="Agregar Reporte" styleClass="titulo-registro"/>

                <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350.0">
                    <Label text="Tipo de Reporte" styleClass="label-campo" prefWidth="120.0"/>
                    <ComboBox fx:id="comboTipoReporte" styleClass="combo-registro"
                              prefWidth="200.0" promptText="Seleccione"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350.0">
                    <Label text="DescripciÃ³n" styleClass="label-campo" prefWidth="120.0"/>
                    <TextArea fx:id="campoDescripcion" styleClass="campo-registro"
                              prefWidth="200.0" prefHeight="100.0" wrapText="true"/>
                </HBox>

                <VBox alignment="CENTER" spacing="5.0">
                    <Button fx:id="botonRegistrar" text="Registrar"
                            onAction="#RegistrarReporte" styleClass="boton-registro"/>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
