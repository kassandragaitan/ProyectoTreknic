<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="460.0" prefWidth="420.0"
            styleClass="fondo-registro"
            stylesheets="@/Estilos/estilos.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controladores.RecuperarPasswordController">

    <children>

        <ImageView fx:id="imagenTrekNic"
                   fitHeight="60.0" fitWidth="100.0"
                   preserveRatio="true" pickOnBounds="true"
                   layoutX="160.0" layoutY="15.0" />

        <VBox layoutX="70.0" layoutY="40.0" spacing="3.0"
              styleClass="panel-registro" alignment="TOP_LEFT" prefWidth="280.0">

            <children>

                <Label text="Recuperar Contrase침a" styleClass="titulo-registro"/>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Correo" styleClass="label-campo" prefWidth="80.0"/>
                    <TextField fx:id="campoEmail" styleClass="campo-registro" prefWidth="160.0"/>
                </HBox>

                <VBox alignment="CENTER" spacing="2.0">
                    <Button fx:id="botonEnviarCodigo" text="Enviar C칩digo"
                            onAction="#enviarCodigo" styleClass="boton-registro"/>
                    <Button fx:id="botonReenviar" text="Reenviar C칩digo"
                            onAction="#reenviarCodigo" visible="false" styleClass="boton-registro"/>
                </VBox>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="C칩digo" styleClass="label-campo" prefWidth="80.0"/>
                    <TextField fx:id="campoCodigo" styleClass="campo-registro" prefWidth="160.0" disable="true"/>
                </HBox>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Nueva" styleClass="label-campo" prefWidth="80.0"/>
                    <PasswordField fx:id="campoNuevaPass" styleClass="campo-registro" prefWidth="160.0" disable="true"/>
                </HBox>

                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Confirmar" styleClass="label-campo" prefWidth="80.0"/>
                    <PasswordField fx:id="campoConfirmarPass" styleClass="campo-registro" prefWidth="160.0" disable="true"/>
                </HBox>

                <Label fx:id="etiquetaError" textFill="red" wrapText="true"/>

                <HBox spacing="8" alignment="CENTER">
                    <Button fx:id="botonRestablecer" text="Restablecer"
                            onAction="#restablecerContrasena" styleClass="boton-registro"/>
                    <Button text="Cancelar" onAction="#cancelar" styleClass="boton-registro"/>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
