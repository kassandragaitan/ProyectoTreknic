            <Button fx:id="botonQuitarFiltro" text="Quitar Filtro" styleClass="boton-quitar-filtro"  />
        </HBox>

        <TableView fx:id="tablaItinerario" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="columnaIdItinerario" text="Id_Itinerario" visible="false" />
