                <TableColumn fx:id="columnaUsuario" text="Usuario" minWidth="100" prefWidth="150" maxWidth="200" />
                <TableColumn fx:id="columnAcciones" text="Acciones" minWidth="180" prefWidth="220" maxWidth="250" />

            </columns>
        </TableView>

    </VBox>
</AnchorPane>
