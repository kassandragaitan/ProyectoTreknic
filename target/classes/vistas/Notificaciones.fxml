<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.NotificacionesController">
   <children>
      <AnchorPane stylesheets="@notificaciones.css">
