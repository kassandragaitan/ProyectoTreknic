<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.GestionCategoriaController">
    <children>
        <AnchorPane id="AnchorPane" styleClass="mainFxmlClass">
            <stylesheets>
                <URL value="@Estilos/gestioncategoria.css"/>
            </stylesheets>
            <VBox layoutX="30.0" layoutY="69.0" prefHeight="53.0" prefWidth="698.0" />
            <TableView fx:id="tablaCategoria" layoutX="34.0" layoutY="140.0" prefHeight="400.0" prefWidth="848.0">
                <columns>
                    <TableColumn fx:id="columnaIdCategoria" prefWidth="100.0" text="ID" />
                    <TableColumn fx:id="columnaNombre" prefWidth="300.0" text="Nombre" />
                    <TableColumn fx:id="columnaDescripcion" prefWidth="448.0" text="Descripción" />
                </columns>
            </TableView>
            <Label layoutX="30.0" layoutY="30.0" styleClass="labelTitulo" stylesheets="@gestioncategoria.css" text="Gestión de Categorías" />
            <HBox layoutX="29.0" layoutY="73.0" prefHeight="42.0" prefWidth="857.0">
                <children>
                    <TextField fx:id="campoBuscarCategoria" promptText="Buscar categoría..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="botonNuevaCategoria" layoutX="769.0" layoutY="25.0" onAction="#nuevaCategoria" styleClass="primary" stylesheets="@gestioncategoria.css" text="Nueva Categoría" />
                </children>
            </HBox>
        </AnchorPane>
    </children>
</HBox>

